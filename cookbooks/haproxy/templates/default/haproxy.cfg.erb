global
      maxconn           30000
      log               127.0.0.1 local0 err
      uid               200
      gid               200
      nbproc            1
      chroot            /tmp
      stats socket      /tmp/haproxy.sock user root group root mode 0777 level admin
      daemon

defaults
        option  dontlognull
        option  dontlog-normal
        option  log-separate-errors
        option  http-server-close
        option  abortonclose
        option tcp-smart-accept
        option tcp-smart-connect
        timeout server                          10s
        timeout client                          10s
        timeout queue                           10s
        timeout connect                         10s
        timeout http-request                    10s
        timeout http-keep-alive                 5s


frontend app
        bind                    0.0.0.0:80
        mode                    http
        log                     global
        option                  http-server-close
        option  httplog
        option                  dontlog-normal
        monitor-uri             /monitoruri
        maxconn                 50000
        clitimeout              3000

        default_backend stats


frontend mysql_read
        bind                    0.0.0.0:3306
        mode                    tcp
        option                  tcplog
        maxconn                 20000
        clitimeout              50000
        default_backend         cluster_mysql_read

backend cluster_mysql_read
        mode                    tcp
        balance                 roundrobin
        contimeout              3000000
        srvtimeout              2200000
        server                  node1 10.0.3.10:3306 weight 150
        server                  node2 10.0.3.20:3306 weight 150
        server                  node3 10.0.3.30:3306 weight 150

backend stats
        log                     global
        mode                    http
        stats                   uri /
        stats                   auth    admin:admin
        stats                   realm   Haproxy\ Statistics
        stats                   refresh 5s
        balance                 roundrobin
